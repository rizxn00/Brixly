{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",                      
    "esModuleInterop": true,  
    "resolveJsonModule": true,                          
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
